---
import '../styles/global.css'
// // NUEVO: Importar sistema de notificaciones Toast global
import Toast from '../components/ui/Toast.astro'

// Aceptamos 'title' como prop desde las p√°ginas para definir el <title> del documento
const { title = 'TaskFlow' } = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		
		<!-- // NUEVO: Sistema de notificaciones Toast disponible globalmente -->
		<Toast />
	</body>
</html>

